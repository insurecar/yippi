{
    "compilerOptions": {
        "target": "es5",
        "outDir": "dist",
        "lib":["es5", "es6", "es2017", "dom"],
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "downlevelIteration":true,
        "baseUrl": ".",
        "pretty": true,
        "paths": {
            "*": ["./node_modules/@types/*", "*"]
        }
    },
    "exclude": [
        "tests/fixtures",
        "node_modules"
    ]
}